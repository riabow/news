<p id="notice"><%= notice %></p>

<h1><%= t "items" %></h1>


<h1>Страница с листингом новостей (без пагинации)</h1>


<%= form_tag items_path, :method => 'get' do  %>
  <%= text_field_tag :search , params[:search] %>
  <%= submit_tag "Search" %>
<% end %>





<table>
  <thead>
    <tr>
      <th>заголовок </th>
      <th>Дата нововсти</th>
      <th>Тэги</th>
    <!--  <th>Body</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.caption %></td>
        <td><%= item.ndate %></td>
        <td><%= item.tags %></td>
      <!--  <td><%= item.body %></td>  -->
        <td><%= link_to 'Посмотреть', item %></td>
        <td><%= link_to 'редактировать', edit_item_path(item) %></td>
        <td><%= link_to 'удалить', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить новость', new_item_path %>
