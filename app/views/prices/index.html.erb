<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table border=1  >
  <thead>
    <tr>
      <th>Tov</th>
      <th>Supl</th>
      <th>Prc</th>
      <th>D</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @prices.each do |price| %>
      <tr>
        <td> <%= price.tov.name %> (<%= price.tov_id %>)</td>

        <td><%= price.supl.name %></td>
        <td><%= price.prc %></td>
        <td><%= price.d %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price), data: { confirm: 'Are you allowed to edit?' } %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

